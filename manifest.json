{
  "manifest_version": 3,
  "name": "Miro",
  "description": "Miro is an open-source Chrome extension that notifies users when ChatGPT has finished generating a response.",
  "version": "1.1.0",
  "permissions": ["notifications", "activeTab", "scripting", "tabs", "background", "webRequest"],
  "host_permissions": ["https://chatgpt.com/*", "https://chat.openai.com/*", "https://claude.ai/*"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*", "https://claude.ai/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
